<h1>Users</h1>
<div class="row">
  <div class="col-lg-6">
    <div class="table-responsive">
      <table class="table table-hover">
        <thead>
          <tr>
            <th>Firstname</th>
            <th>Lastname</th>
            <th>Email</th>
            <th>Show</th>
            <th>Edit</th>
            <th>Delete</th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= user.firstname %></td>
              <td><%= user.lastname %></td>
              <td><%= user.email %></td>
              <td>
                <%= link_to "Show", user, :class => "btn btn-xs btn-primary" %>
              </td>
              <td>
                <%= link_to "Edit", edit_user_path(user), :class => "btn btn-xs btn-info" %>
              </td>
              <td>
                <%= button_to "Delete", user, :method => :delete, :class => "btn btn-xs btn-danger" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
