          <h1><%= @event.title %></h1>
          <p><%= @event.description %></p>
          <div class="liker">
            <% if @have_like > 0 %>
              <%= link_to 'Unlike', sports_selection_path, id: "event-like", class: "active" %>
            <% else %>
              <%= link_to 'Like', sports_selection_path, id: "event-like" %>
            <% end %>
