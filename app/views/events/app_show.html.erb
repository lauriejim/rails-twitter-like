<body id="page-event" data-sport="<%= @event.sport.background %>" class="page-event">
  <div class="container">
    <div class="row">
      <%= render "partials/profil_bar"%>
      <section class="col-md-12 nopadding">
        <div class="event-img">
          <%= image_tag("/uploads/"+@event.cover) %>
        </div>
        <div class="event-informations">
          <ul>
            <li><i class="icon-adresse"></i><%= @event.adresse %></li>
            <li><i class="icon-date"></i>01.12.14</li>
            <li><i class="icon-like"></i><%= @event.likes.count %> like</li>
          </ul>
        </div>
      </section>
        <section class="col-md-12 nopadding">
          <div class="col-md-8 col-md-offset-2 event-description">
            <h1><%= @event.title %></h1>
            <p><%= @event.description %></p>
            <% if session[:user_id] %>
              <div class="liker">
                <%= link_to 'Like', sports_selection_path, class: "subscriptions" %>
              </div>
            <% end %>
          </div>
          <% if session[:user_id] %>
            <div class="col-md-8 col-md-offset-2 event-comments">
              <% @event.comments.each do |comment| %>
                <div class="comment">
                  <p class="author"><%= comment.user.firstname %> - 17.01.2014</p>
                  <p class="message"><%= comment.message %></p>
                  <hr>
                </div>
              <% end %>
              <div class="response">
                <p>Qu'en pensez-vous ?</p>
                <%= form_tag('/actions/comment', method: "post") do %>
                  <%= text_area_tag "message", nil, :placeholder => 'Je pense que ...' %>
                  <%= hidden_field_tag 'id', @event.id %>
                  <%= submit_tag("RÃ©pondre") %>
                <% end %>
              </div>
            </div>
          <% end %>
        </section>

      <section id="sidebar-user" class="sidebar-user">
        <div id="sidebar-close" class="sidebar-close">
          <i class="icon-close"></i>
        </div>
        <div class="sidebar-img">
          <%= image_tag("basket.jpg") %>
        </div>
        <h1>Jeffrey Williamson</h1>
        <hr>
        <div class="sidebar-like">
          <i class="icon-like"></i><span>Likes</span>
          <ul>
            <li>Plateau quarts et demi-finales - Coupe de France U17</li>
            <li>Finale du Top 14 saison 2014-2015</li>
            <li>Plateau quarts et demi-finales - Coupe de France U17</li>
          </ul>
        </div>
      </section>
    </div>
  </div>
</body>