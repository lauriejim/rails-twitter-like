<h1>Edit sport</h1>
<div class="col-lg-6">
  <%= simple_form_for @event do |f| %>
    <%= f.input :sport_id, :collection => Sport.all.map{|u| [u.title, u.id]} %>
    <%= f.input :title %>
    <%= image_tag("/uploads/"+@event.cover, size: "150") %>
    <%= f.file_field(:cover, accept: 'image/png,image/gif,image/jpeg') %>
    <%= image_tag("/uploads/"+@event.background, size: "150") %>
    <%= f.file_field(:background, accept: 'image/png,image/gif,image/jpeg') %>
    <%= f.input :description %>
    <%= f.input :adresse %>
    <%= f.button :submit %>
  <% end %>
</div>